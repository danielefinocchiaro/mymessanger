{
  "name": "my-messenger",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production remix-serve build"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^3.11.1",
    "@remix-run/react": "^1.3.4",
    "@remix-run/serve": "^1.2.3",
    "@remix-run/server-runtime": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "express": "^4.17.3",
    "invariant": "^2.2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.3.4",
    "remix-auth": "^3.2.1",
    "remix-auth-form": "^1.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/invariant": "^2.2.35",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.0.0",
    "prisma": "^3.11.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14"
  }
}

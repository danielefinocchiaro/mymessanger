    "cross-env": "^7.0.3",
    "formik": "^2.2.9",
    "invariant": "^2.2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3",
    "remix-auth": "^3.2.1",
    "remix-auth-form": "^1.1.1",
